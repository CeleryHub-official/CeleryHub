-- Place this script in a LocalScript within StarterGui or a GUI component
 
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local starterGui = game:GetService("StarterGui")
 
-- Check if LocalPlayer exists (i.e., script is running on the client)
if player then
    -- Use SetCore to show a notification
    starterGui:SetCore("SendNotification", {
        Title = "All items have been given!",
        Text = "Have fun!",
        Duration = 3 -- Duration in seconds
    })
end
 
game.Players.LocalPlayer.BlocksAttributes.Bluesteel:SetAttribute("Unlocked", true)
